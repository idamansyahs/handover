generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  STAFF
}

// schema.prisma (potongan)
model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  role      Role     @default(STAFF)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Room {
  id         Int        @id @default(autoincrement())
  roomNumber String     @unique
  type       RoomType     
  price      Int        // harga per malam (rupiah)
  status     RoomStatus @default(VCN)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  bookings   Booking[]  // relation (historis & assigned)
}

model Booking {
  id           Int           @id @default(autoincrement())
  bookingCode  String?       @unique
  room         Room?         @relation(fields: [roomId], references: [id])
  roomId       Int?
  roomType     RoomType      // jenis kamar yg diminta user (FBK/FSKG/FSST/DXQ)
  guestName    String
  email        String
  phone        String
  notes        String?
  checkIn      DateTime
  checkOut     DateTime
  nights       Int?
  pricePerNight Int?
  total        Int?
  status       BookingStatus @default(PENDING) // PENDING / CONFIRMED / CHECKED_IN / CHECKED_OUT / CANCELLED
  payment_status  String   @default("PENDING")
  paymentToken    String?    @unique
  midtransOrderId String?  @unique
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

enum RoomType {
  FBK
  FSKG
  FSST
  DXQ
}

enum RoomStatus {
  VCN        // Vacant, clean, not inspected
  VCI        // Vacant, clean, inspected (ready)
  OCCUPIED
  VDN        // Vacant, dirty (needs cleaning)
  OOO        // Out of order / not for rent
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CHECKED_IN
  CHECKED_OUT
  CANCELLED
}

model Konten {
  id        Int      @id @default(autoincrement())
  link      String
  deskripsi String
  platform  KontenStatus @default(Instagram)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum KontenStatus {
  Instagram
  Tiktok
}
